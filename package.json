{
  "name": "finance-manager",
  "version": "1.0.0",
  "description": "Backend API for personal finance manager app (my pet project)",
  "author": "Yuriy Kryvokhyzha",
  "license": "Apache License 2.0",
  "scripts": {
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "document": "npx compodoc -p tsconfig.json -s",
    "init": "npx prisma init && ts-node generate-typings",
    "migrate": "npx prisma introspect && npx prisma generate",
    "build": "nest build",
    "start": "IS_LOCAL=true nest start",
    "start:dev": "IS_LOCAL=true nest start --watch",
    "start:debug": "IS_LOCAL=true nest start --debug --watch",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./apps/users/test/jest-e2e.json"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.15.0",
    "@grpc/grpc-js": "^1.4.3",
    "@grpc/proto-loader": "^0.6.6",
    "@nestjs-modules/mailer": "^1.6.0",
    "@nestjs/bull": "^0.4.2",
    "@nestjs/common": "^8.1.2",
    "@nestjs/config": "^1.1.0",
    "@nestjs/core": "^8.1.2",
    "@nestjs/elasticsearch": "^8.0.0",
    "@nestjs/graphql": "^9.1.1",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/microservices": "^8.1.2",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^8.1.2",
    "@nestjs/schedule": "^1.0.1",
    "@nestjs/swagger": "^5.1.4",
    "@prisma/client": "~2.7.1",
    "apollo-server-express": "^3.4.0",
    "bcrypt": "^5.0.1",
    "bull": "^4.1.0",
    "class-transformer": ">=0.4.0",
    "class-validator": "^0.13.1",
    "cls-hooked": "^4.2.2",
    "dotenv": "^10.0.0",
    "graphql": "^14.5.8",
    "graphql-tools": "^4.0.6",
    "grpc": "^1.24.11",
    "kafkajs": "^1.15.0",
    "moment": "^2.29.1",
    "nestjs-command": "^3.1.0",
    "node-chartist": "^1.0.5",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "prisma-binding": "^2.3.16",
    "prisma-client-lib": "^1.34.12",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.4.0",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.15",
    "@nestjs/testing": "^8.1.2",
    "@prisma/cli": "~2.7.1",
    "@types/bull": "^3.15.5",
    "@types/jest": "^27.0.2",
    "handlebars": "^4.7.7",
    "jest": "^27.3.1",
    "jest-cli": "^27.3.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "tslint": "6.1.3",
    "typescript": "^4.4.4",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "node_modules",
      "<rootDir>/core/app/test",
      "<rootDir>/core/domain/test"
    ],
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@domain/(.*)": "<rootDir>/libs/domain/src/$1",
      "@domain": "<rootDir>/libs/domain/src",
      "@app/(.*)": "<rootDir>/libs/app/src/$1",
      "@app": "<rootDir>/libs/app/src",
      "@common/(.*)": "<rootDir>/libs/common/src/$1",
      "@common": "<rootDir>/libs/common/src",
      "@persistance/(.*)": "<rootDir>/libs/persistance/src/$1",
      "@persistance": "<rootDir>/libs/persistance/src",
      "@transport/(.*)": "<rootDir>/libs/transport/src/$1",
      "@transport": "<rootDir>/libs/transport/src"
    }
  }
}

{
  "name": "finance-manager",
  "version": "0.0.1",
  "description": "Backend API for personal finance manager app (my pet project)",
  "author": "Yuriy Kryvokhyzha",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "document": "npx compodoc -p tsconfig.json -s",
    "migrate": "prisma deploy --force && prisma generate && graphql get-schema --project database && graphql codegen --project database",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/src/main.js",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.3.12",
    "@nestjs/bull": "^0.1.0",
    "@nestjs/common": "^6.11.1",
    "@nestjs/config": "^0.4.0",
    "@nestjs/core": "^6.11.1",
    "@nestjs/graphql": "^6.5.3",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-express": "^6.11.1",
    "@nestjs/swagger": "^4.5.9",
    "@types/nodemailer": "^6.4.0",
    "apollo-server-express": "^2.14.2",
    "bcrypt": "^4.0.1",
    "bull": "^3.13.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.1",
    "dotenv": "^8.2.0",
    "graphql": "^14.5.8",
    "graphql-tools": "^4.0.6",
    "nestjs-command": "^1.3.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "prisma-binding": "^2.3.16",
    "prisma-client-lib": "^1.34.10",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@nestjs/testing": "^5.1.0",
    "@types/bcrypt": "^3.0.0",
    "@types/bull": "^3.12.1",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.5",
    "handlebars": "^4.7.2",
    "jest": "^25.2.0",
    "moment": "^2.24.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.19",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "typescript": "^3.7.2",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "node_modules",
      "<rootDir>/core/app/test",
      "<rootDir>/core/domain/test"
    ]
  }
}

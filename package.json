{
  "name": "finance-manager",
  "version": "0.6.0",
  "description": "Backend API for personal finance manager app (my pet project)",
  "author": "Yuriy Kryvokhyzha",
  "license": "Apache License 2.0",
  "scripts": {
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "document": "npx compodoc -p tsconfig.json -s",
    "postinstall": "npx prisma init && ts-node generate-typings",
    "migrate": "npx prisma introspect && npx prisma generate",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./apps/users/test/jest-e2e.json"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.9.1",
    "@grpc/proto-loader": "^0.5.5",
    "@nestjs-modules/mailer": "^1.3.12",
    "@nestjs/bull": "^0.1.0",
    "@nestjs/common": "^7.4.4",
    "@nestjs/config": "^0.4.0",
    "@nestjs/core": "^7.4.4",
    "@nestjs/elasticsearch": "^7.1.0",
    "@nestjs/graphql": "^6.5.3",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/microservices": "^7.5.1",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-express": "^6.11.1",
    "@nestjs/schedule": "^0.4.1",
    "@nestjs/swagger": "^4.5.9",
    "@prisma/client": "^2.7.1",
    "@types/nodemailer": "^6.4.0",
    "apollo-server-express": "^2.9.16",
    "bcrypt": "^5.0.0",
    "bull": "^3.13.0",
    "class-transformer": ">=0.3.1",
    "class-validator": "^0.12.1",
    "dotenv": "^8.2.0",
    "graphql": "^14.5.8",
    "graphql-tools": "^4.0.6",
    "grpc": "^1.24.3",
    "moment": "^2.27.0",
    "nestjs-command": "^1.3.0",
    "node-chartist": "^1.0.5",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "prisma-binding": "^2.3.16",
    "prisma-client-lib": "^1.34.10",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.2",
    "swagger-ui-express": "^4.1.4",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@nestjs/testing": "^6.1.1",
    "@prisma/cli": "^2.7.1",
    "@types/bcrypt": "^3.0.0",
    "@types/bull": "^3.12.1",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/passport-jwt": "^3.0.3",
    "@types/redis": "^2.8.27",
    "@types/supertest": "^2.0.5",
    "@types/xml2js": "^0.4.5",
    "handlebars": "^4.7.2",
    "jest": "^25.2.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.19",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "typescript": "^3.7.2",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "node_modules",
      "<rootDir>/core/app/test",
      "<rootDir>/core/domain/test"
    ],
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@domain/(.*)": "<rootDir>/libs/domain/src/$1",
      "@domain": "<rootDir>/libs/domain/src",
      "@app/(.*)": "<rootDir>/libs/app/src/$1",
      "@app": "<rootDir>/libs/app/src",
      "@common/(.*)": "<rootDir>/libs/common/src/$1",
      "@common": "<rootDir>/libs/common/src",
      "@persistance/(.*)": "<rootDir>/libs/persistance/src/$1",
      "@persistance": "<rootDir>/libs/persistance/src",
      "@transport/(.*)": "<rootDir>/libs/transport/src/$1",
      "@transport": "<rootDir>/libs/transport/src"
    }
  }
}

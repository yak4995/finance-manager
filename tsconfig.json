{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@domain": [
        "libs/domain/src"
      ],
      "@domain/*": [
        "libs/domain/src/*"
      ],
      "@app": [
        "libs/app/src"
      ],
      "@app/*": [
        "libs/app/src/*"
      ],
      "@common": [
        "libs/common/src"
      ],
      "@common/*": [
        "libs/common/src/*"
      ],
      "@persistance": [
        "libs/persistance/src"
      ],
      "@persistance/*": [
        "libs/persistance/src/*"
      ],
      "@transport": [
        "libs/transport/src"
      ],
      "@transport/*": [
        "libs/transport/src/*"
      ]
    }
  },
  "include": [
    "apps/**/src/**/*",
    "libs/**/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}